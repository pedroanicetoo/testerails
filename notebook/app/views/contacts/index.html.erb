<%- model_class = Contact -%>

<script>
  $.notify("<%= notice %>", "success");
</script>


<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="basic-grey">
        <h1 style="padding:0 0 10px 10px;"><%= "#{t('messages.listing')} #{model_class.model_name.human(count:2)}" %></h1>

        <table style="width: 100%" class="table table-hover">
          <tr>
            <th style="text-align:left"><%= model_class.human_attribute_name("name") %></th>
            <th style="text-align:left"><%= model_class.human_attribute_name("kind") %></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>

        <% @contacts.each do |contact| %>
          <tr style="background: <%= cycle('#fff', '#ccc') %>; color: #000; text-shadow: none; font-weight: bold">
            <td><%= contact.name %></td>
            <td><%= contact.kind.description %></td>
            <td><%= contact.address.state %></td>
            <td><%= link_to t('buttons.show'), contact %></td>
            <td><%= link_to t('buttons.edit'), edit_contact_path(contact) %></td>
            <td><%= link_to t('buttons.destroy'), contact, method: :delete, data: { confirm: t('messages.confirm') } %></td>
          </tr>
        <% end %>
        </table>
        <%= link_to t('buttons.new'), new_contact_path, :class => 'btn btn-primary' %>
        <%= link_to t('buttons.home'), root_path, :class => 'btn btn-success' %>
        <div style="width:100%;text-align:center">
          <%= will_paginate (@contacts), :page_links => true, :previous_label => t('views.pagination.previous'), :next_label => t('views.pagination.next'), :inner_window => 1, :outer_window => 0 %>
        </div>
      </div>

    </div>
  </div>

</div>
